<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/color_white"
    app:cardElevation="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp">
    <RelativeLayout
        android:layout_height="56dp"
        android:background="@drawable/stroke"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_marginVertical="5dp">
        <TextView
            android:id="@+id/orderIdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="Order Id : " />
        <TextView
            android:layout_alignBaseline="@id/orderIdLabel"
            android:id="@+id/OrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:layout_toRightOf="@id/orderIdLabel"
            android:layout_centerVertical="true"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:maxLength="10"
            android:text="ORDER_ID : 2222222222222" />
        <TextView
            android:id="@+id/priceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:layout_toLeftOf="@id/orderPrice"
            android:textStyle="bold"
            android:text="Price : " />
        <TextView
            android:id="@+id/orderPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:layout_alignBaseline="@id/orderIdLabel"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="RS : 2222" />
    </RelativeLayout>
</android.support.v7.widget.CardView>